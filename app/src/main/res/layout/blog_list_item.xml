<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="20dp"
    android:id="@+id/blog_list_item"
    android:layout_height="300dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="20sp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_blog_rec"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/app_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.177" />

            <TextView
                android:id="@+id/text_blog_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_change_password"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/image_blog_rec"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/image_blog_rec"
                app:layout_constraintTop_toBottomOf="@+id/image_blog_rec"
                app:layout_constraintVertical_bias="0.264" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>